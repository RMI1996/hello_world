#include <iostream>
#include <cstring>

using namespace std;

int main()
{
	string str;
	cout << "Enter the word: ";
	cin >> str;
  int len = str.length();
	for(int i = 0; i < len/2; ++i)
	{
		if(str[i] != str[len-i-1])
		{
		  cout << "Word is not polindrom.";
      exit();
		}
	}
  cout << "Word is not polindrom";
	
	return 0;
}
